each order in orders
	- let textTime="";
	if Date.now() - order.ctAt > 3*24*60*60*1000
		-textTime="text-danger";

	each ordfir in order.ordfirs
		-let pdfir = ordfir.pdfir;
		table.table.table-bordered.text-center.mt-4(class="pdfir pdfir-"+pdfir._id)
			tr(class=textTime)
				th(width="8%")
					a(href="/bsProduct/"+pdfir._id) #{pdfir.code}
					br
					a(href="/bsCter/"+order.cter._id) #{order.cter.nome}
				th(colspan=order.sizes.length+1, width="30%")
					.row
						.col-6
							a.btn.btn-link(href="/bsOrder/"+order._id) #{order.code}
						.col-6.text-right
							if order.status == 0
								-a;
								form(method="post", action="/bsOrdChangeSts", enctype="multipart/form-data")
									input(type="hidden", name="orderId", value=order._id)
									input(type="hidden", name="target", value="bsOrderConfirm")
									input.btn.btn-secondary(type="submit", value="生产")
							else if order.status == 5
								- txtSatus = "text-success";
								span.btn.btn-success 在产
							
				th
				th(width="8%")
					span 订单日期:
					br
					span #{moment(order.ctAt).format('MM/DD/YYYY')}
				th(colspan=order.sizes.length)
					.row
						if order.status == 5
							-a;
							.col-6
								button.sendBtn.btn.btn-secondary(type="button", id='sendBtn-'+order._id) 发货
							.col-6
								form(method="post", action="/bsOrdChangeSts", enctype="multipart/form-data")
									input(type="hidden", name="orderId", value=order._id)
									input(type="hidden", name="target", value="bsOrderFinish")
									input.btn.btn-warning(type="submit", value="完成")
			tr.bg-light
				th 颜色
				each size in order.sizes
					-a;
					th #{Conf.sizes[size]}
				th 合计
				th.bg-secondary(width="2%")
				th 颜色
				each size in order.sizes
					-a;
					th #{Conf.sizes[size]}
			form(id="sendForm-"+order._id, method="post", action="/bsOrderSend", enctype="multipart/form-data")
				input(type="hidden", name="obj[orderId]", value=order._id)
				input(type="hidden", name="obj[ordfirId]", value=ordfir._id)
				- let i = 0, k = 0, tot = 0;
				each ordsec in ordfir.ordsecs
					- let pdsec = ordsec.pdsec;
					- i++;
					tr
						th.bg-light #{ordsec.color}
						include ./input/tdBody
						td.bg-secondary
						th.bg-light #{ordsec.color}
						include ./output/tdBody
				tr
					td(colspan=order.sizes.length+1)
					td.text-success: h4 #{tot}