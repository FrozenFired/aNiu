- let i = 0, k = 0;
each macsec in macfir.macsecs
	- i++;
	tr
		if i==1
			-a;
			th: a(href="/bsProduct/"+macfir.pdfir._id) #{macfir.pdfir.code}
			th: a(href="/bsFder/"+machin.fder._id) #{machin.fder.nome}
		else
			th
			th
		th.bg-light #{macsec.pdsec.color}
		each size in machin.sizes
			-let less = '';
			-let quot = '';
			each macthd in macsec.macthds
				if macthd.size == size
					- quot = parseInt(macthd.quot);
					- less = parseInt(macthd.quot) - parseInt(macthd.ship);
					- break;
			td
				if less == 0
					-a;
					span #{quot}
				else
					span.text-info #{quot}
		td.bg-secondary
		each size in machin.sizes
			-let less = '';
			-let ship = '';
			each macthd in macsec.macthds
				if macthd.size == size
					- ship = parseInt(macthd.ship);
					- less = parseInt(macthd.quot) - ship;
					- break;
			td 
				if less == 0
					-a;
					span #{ship}
				else
					span.text-info #{ship}