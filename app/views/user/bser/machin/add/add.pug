.row#needMacBtns
	each pdfir in products
		-a;
		.col-2: button.btn.btn-warning.btn-block.pneed(type="button", id="clk-"+pdfir._id)
			span #{pdfir.code} &nbsp; | &nbsp;  #{pdfir.needMac}
		input(type="hidden", id="colors-"+pdfir._id, value=pdfir.selColors)
form.my-5#machinNew(method="post", action="/bsMacNew", enctype="multipart/form-data")
	input#objFir(type="hidden", name="obj[pdfirId]")
	input#objFder(type="hidden", name="obj[fderId]")
	table.table.table-border.text-center#machinProducts
		tr(class=txtSatus).bg-secondary
			th(width="20%") 样品型号
			th(width="10%") 工厂名称
			th
			th.changeTd
			th.changeTd
			th.changeTd
			th.changeTd
			th.changeTd
			th.changeTd
			th#changeTh
				button.btn.btn-success#submitBtn(type="button") 确认
		tr#changeElem
			td
				#pdcode
				#ajaxPdsForm.input-group
					input#ajaxPdsCode.productcode.form-control(type="number", data-url="/machinAjaxBsProds", placeholder='模特编号', autocomplete="off")
				#prodPage
			td
				#fderBtn
				#formFders
					input#ajaxFders.form-control(type="text", placeholder='工厂名称或编号', autocomplete="off")
				.fdersAjax
			th 颜色
			th.changeTd XS
			th.changeTd S
			th.changeTd M
			th.changeTd L
			th.changeTd XL
			th.changeTd XXL
			th#changeSize
